<idea-plugin url="https://github.com/spring-io/spring-javaformat">
	<id>spring-javaformat</id>
	<name>Spring Javaformat</name>
	<vendor url="https://spring.io">Spring Team</vendor>
	<version>${project.version}</version>
	<!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
	<idea-version since-build="173.0"/>
	<description>
		<![CDATA[
		A source formatter that applies wrapping and whitespace conventions to provide a consistent “Spring” style.

		This plug-in depends on spring-javaformat-maven-plugin or spring-javaformat-gradle-plugin, and the dependency plug-in must be added to your project to be effective.
		]]>
	</description>
	<change-notes>
		<![CDATA[
       <h4>0.0.27</h4>
      <ul>
          <li>Upgrade to Eclipse 2020-12 #254</li>
      </ul>
      ]]>
	</change-notes>
	<category>Formatting</category>
	<depends>org.jetbrains.idea.maven</depends>
	<depends>org.jetbrains.plugins.gradle</depends>
	<extensions defaultExtensionNs="com.intellij">
		<postStartupActivity implementation="io.spring.format.formatter.intellij.SpringFormatStartupActivity" />
	</extensions>
</idea-plugin>
